                        multiline: 'false'
                        readonly: True
                        text: '0.0'
                    Label:
                        text: "Focus [um]: "
                        size_hint_x: None
                        width: 90
                    FloatInput:
                        id: focus_val
                        multiline: 'false'
                        readonly: True
                        text: '0.0'
            Label:
                text: "Fan Control"
                size_hint_y: None
                height: 30
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1 
