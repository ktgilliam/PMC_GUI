#:kivy 1.0
# Primary Mirror Control GUI:
<PMC_GUI>:
    cols: 1
    # Top half is for inputs.
    Label:
        id: title_label
        text: "PRIMARY MIRROR CONTROL"
        font_size: '20sp'
        bold: True
        size_hint_y: None
        height: 30
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
    GridLayout:
        cols: 3
        GridLayout:
            cols: 1
            id: rel_ctrl
            size_hint_x: None
            width: 400
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1 
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                text: "Tip/Tilt/Focus (Relative)"
                size_hint_y: None
                height: 30
            GridLayout:
                cols: 2
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1 
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                GridLayout:
                    cols: 1
                    padding: [10, 10, 10, 10]
                    GridLayout:
                        cols: 3
                        #______________
                        Label:
                        Button:
                            text: '+ Tip'
                            size_hint_y: None
                            height: 40
                            size_hint_x: None
                            width: 50
                            on_press: root.plusTipButtonPushed()
                        Label:
                        #______________
                        Button:
                            text: '- Tilt'
                            size_hint_y: None
                            height: 40
                            size_hint_x: None
                            width: 50
                            on_press: root.minusTiltButtonPushed()
                        Label: # Would like to put an indicator light here.
                        Button:
                            text: '+ Tilt'
                            size_hint_y: None
                            height: 40
                            size_hint_x: None
                            width: 50
                            on_press: root.plusTiltButtonPushed()
                        #______________
                        Label:
                        Button:
                            text: '- Tip'
                            size_hint_y: None
                            height: 40
                            size_hint_x: None
                            width: 50
                            on_press: root.minusTipButtonPushed()
                        Label:
                        #______________
                        Label:
                        Label:
                        Label:
                        #______________
                    Label:
                        text: "Tip/Tilt Step Size [urad]:"
                        size_hint_y:None
                        height: 20
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 40
                        Button:
                            id: _1uradButton
                            text: '1'
                            size_hint_y: None
                            height: 30
                            on_press: root._1uradButtonPushed()
                        Button:
                            id: _10uradButton
                            text: '10'
                            size_hint_y: None
                            height: 30
                            on_press: root._10uradButtonPushed()
                        Button:
                            id: _100uradButton
                            text: '100'
                            size_hint_y: None
                            height: 30
                            on_press: root._100uradButtonPushed()
                        Button:
                            id: _1000uradButton
                            text: '1000'
                            size_hint_y: None
                            height: 30
                            on_press: root._1000uradButtonPushed()
                GridLayout:
                    cols: 1
                    padding: [10, 10, 10, 10]
                    GridLayout:
                        cols: 3
                        Label:
                        Button:
                            text: '+Focus'
                            size_hint_y: None
                            height: 40
                            on_press: root.plusFocusButtonPushed()
                        Label:
                        Label:
                        Button:
                            text: '-Focus'
                            size_hint_y: None
                            height: 40
                            on_press: root.minusFocusButtonPushed()
                        Label:
                        Label:
                        Label:
                        Label:
                    Label:
                        text: "Focus Step Size [um]:"
                        size_hint_y:None
                        height: 20
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: None
                        height: 40
                        Button:
                            id: _1umButton
                            text: '1'
                            size_hint_y: None
                            height: 30
                            on_press: root._1umButtonPushed()
                        Button:
                            id: _10umButton
                            text: '10'
                            size_hint_y: None
                            height: 30
                            on_press: root._10umButtonPushed()
                        Button:
                            id: _100umButton
                            text: '100'
                            size_hint_y: None
                            height: 30
                            on_press: root._100umButtonPushed()
                        Button:
                            id: _1000umButton
                            text: '1000'
                            size_hint_y: None
                            height: 30
                            on_press: root._1000umButtonPushed()
                    #_________________
        GridLayout:
            cols: 1
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1 
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                text: 'Tip/Tilt/Focus Absolute'
                size_hint_y: None
                height: 30

            GridLayout:
                cols: 3
                padding: [15, 10, 10, 10]
                id: abs_ctrl
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                Label: 
                    text: 'Tip [urad]: '
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width: 70
                FloatInput:
                    id: tip_abs_TI
                    text: '0.0'
                    size_hint_y: None
                    height: 30
                Button:
                    text:'Go'
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width:30
                    on_press: root.tipAbsGoButtonPushed()
                Label: 
                    text: 'Tilt [urad]: '
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width: 70
                FloatInput:
                    id: tilt_abs_TI
                    text: '0.0'
                    size_hint_y: None
                    height: 30
                Button:
                    text:'Go'
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width:30
                    on_press: root.tiltAbsGoButtonPushed()
                Label: 
                    text: 'Focus [um]: '
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width: 70
                FloatInput:
                    id: focus_abs_TI
                    text: '0.0'
                    size_hint_y: None
                    height: 30
                Button:
                    text:'Go'
                    size_hint_y: None
                    height: 30
                    size_hint_x: None
                    width:30
                    on_press: root.focusAbsGoButtonPushed()
        GridLayout:
            cols: 1
            id: vector_ctrl
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
                text: "VECTOR"
                size_hint_y: None
                height: 30
            GridLayout:
                cols: 1
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1 
                    Line:
                        width: 2
                        rectangle: self.x, self.y, self.width, self.height
                Label:
                    text: "(Not yet implemented)"
                    size_hint_y: None
                    height: 30
                GridLayout:
                    cols: 2
                    row_force_default: True
                    row_default_height: 30
                    padding: [10, 10, 10, 10]
                    # canvas.before:
                    #     Color:
                    #         rgba: 0, 1, 0, 1 #green
                    #     Line:
                    #         width: 2
                    #         rectangle: self.x, self.y, self.width, self.height
                    Label:
                        text: "X: "
                        size_hint_x: None
                        width: 30
                    FloatInput:
                        id: x_val
                        multiline: 'false'
                        disabled: True
                        text: '1.0'
                    Label:
                        text: "Y: "
                        size_hint_x: None
                        width: 30
                    FloatInput:
                        id: y_val
                        multiline: 'false'
                        disabled: True
                        text: '0.0'
                    Label:
                        text: "Z: "
                        size_hint_x: None
                        width: 30
                    FloatInput:
                        id: z_val
                        multiline: 'false'
                        disabled: True
                        text: '0.0'
                    Label:
                        size_hint_x: None
                        width: 30
                    Button:
                        text: 'Apply'
                        disabled: True
                Label:
            
    TerminalWidget:
        id: app_term
        label: 'Terminal'
            # size_hint :1,1
            # TextInput:
            #     id: app_term
                # disabled: True

<TerminalWidget>:
    cols: 1
    padding: [5, 5, 5, 5]
    term_id: terminal
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Line:
            width: 2
            rectangle: self.x, self.y, self.width, self.height
    Label:
        text: root.label
        size_hint_y: None
        height: 20
    ScrollView:
        id: scrlv
        TextInput:
            id: terminal
            multiline: True
            size_hint: 1,None
            height: max( (len(self._lines)+1) * self.line_height, scrlv.height)
            disabled: True
            text: root.text
            background_color: ( 1, 1, 1, 1)
            # foreground_color: (0,0,0,1)
