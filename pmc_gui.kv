PMC_GUI:
    id: id: id.__self__
    cols: 1
    ip_addr_prop:  app.config.get('Connection','ip_addr')
    port_prop: int(app.config.get('Connection','ip_port'))
    fan_speed_prop: int(app.config.get('Motion','fan_speed'))
    home_speed_prop: int(app.config.get('Motion','homing_speed'))
    homing_timeout_prop: int(app.config.get('Motion','homing_timeout'))
    rel_speed_prop: int(app.config.get('Motion','rel_move'))
    abs_speed_prop: int(app.config.get('Motion','abs_move'))
    debug_mode_prop: app.config.get('General', 'dbg_mode')=='True'
    # Top half is for inputs.
    GridLayout:
        cols: 1
        size_hint: 1, None
        height: 68
        Label:
            id: title_label
            text: "PRIMARY MIRROR CONTROL [Version 0.1]"
            font_size: '20sp'
            bold: True
            size_hint_y: None
            height: 30
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

        StackLayout:
            # cols: 2
            padding: [4, 4, 4, 4]
            size_hint_y: None
            height: 36
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Button:
                id: connect_btn
                text:'Connect'
                size_hint_y: None
                height: 30
                size_hint_x: None
                width:110
                background_color: (1,0,0,1)
                on_release: app.appRequestList.append(AppRequest.TOGGLE_CONNECTION)
            Button:
                text:'Enable Steppers'
                id: enable_steppers_btn
                size_hint_y: None
                height: 30
                size_hint_x: None
                width:120
                on_release: app.appRequestList.append(AppRequest.TOGGLE_STEPPER_ENABLE)
                disabled: True     
            Button:
                text:'STOP'
                id: do_stop_btn
                bold: True
                size_hint_y: None
                height: 30
                size_hint_x: None
                width:80
                background_color: (1,0,0,1)
                on_release: app.appRequestList.append(AppRequest.STOP_REQUESTED), app.stopButtonPushed()
                disabled: True
    GridLayout:
        cols: 3
        size_hint: 1, None
        size: root.width, root.height * 0.5
        GridLayout:
            cols: 1
            id: rel_ctrl
            size_hint_x: None
            width: 400
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1 
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            Label:
