                Label:
                    text: 'Homing'
                    size_hint_y : None
                    height:30
                GridLayout:
                    cols: 1
                    padding: [15, 10, 10, 10]
                    id: abs_ctrl
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
