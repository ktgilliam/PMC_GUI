#:kivy 1.0
TopLayout:
    cols: 1

    # sm_id: 'sm'
    ScreenManager:
        id: sm
        PMC_GUI:
        PMC_Config_GUI:

    TerminalWidget:
        label: 'Terminal'
        id: app_term
        size_hint: 1, None
        size: root.width, root.height/2.5

    StackLayout:
        padding: [15, 10, 10, 10]
        size_hint_y: None
        height: 45
        Button:
            text:'Main'
            size_hint_y: None
            height: 30
            size_hint_x: None
            width:80
            on_release: sm.current = 'main'
        Button:
            text:'Config'
            size_hint_y: None
            height: 30
            size_hint_x: None
            width:80
            on_release: sm.current = 'config'
            # on_release: root.switchScreen(sm_id)


