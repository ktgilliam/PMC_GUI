#     border_color: 1,0,0,1
<TecWidget>:
    diameter:15
    x_loc: self.rho*math.cos(self.theta)
    y_loc: self.rho*math.sin(self.theta)
    canvas.before:
        Color:
            rgb: 1, 0, 0
        Ellipse:
            size: self.diameter, self.diameter
            # pos: (self.center_x - self.diameter/2) + self.x_loc, (self.center_y - self.diameter/2) + self.y_loc
            pos: (self.center_x - self.diameter/2) + self.x_loc, (self.center_y - self.diameter/2) + self.y_loc
    size_hint: None,None
    # RelativeLayout:
        # Label:
        #     text:'test'

<MirrorViewWidget>:
    # border_color: 1,0,0,1
    anchor_x: 'center'
    anchor_y: 'center'
    # Widget:
    # pos: self.parent.pos
    rho_scale: 1
    MirrorWidget:
        id: mirror_circle
        diameter: self.parent.height*0.95
        # dia: 400
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Ellipse:
                size: self.diameter, self.diameter
                pos: self.center_x - self.diameter/2, self.center_y - self.diameter/2
        size_hint: None,None

    TecWidget:
        rho: 100
        theta: 100*math.pi/180

    TecWidget:
        rho: 60
        theta: 45*math.pi/180
