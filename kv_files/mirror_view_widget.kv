<MirrorViewControlPanel>:
    cols: 2
    opts_disabled: True if (root.active_tec == None) else not root.active_tec.tec_found

    MirrorViewWidget:
        id: mvw
        diameter: self.height*0.9
    GridLayout:
        cols: 2
        size_hint_x: None
        width:600
        GridLayout:
            cols: 2
            # size_hint_x: None
            # width:300
            size_hint_y: None
            height: 30
            Button:
                id: tec_connect_a_btn
                text:'Connect A'
                size_hint_y: None
                height: 30
                size_hint_x: None
                width:110
                background_color: (1,0,0,1)
                on_release: app.tecBox_A.requestConnectionToggle()
                disabled: not root.cfg_loaded
            Button:
                id: tec_connect_b_btn
                text:'Connect B'
                size_hint_y: None
                height: 30
                size_hint_x: None
                width:110
                background_color: (1,0,0,1)
                on_release: app.tecBox_B.requestConnectionToggle()
                disabled: not root.cfg_loaded
        Button:
            text: "Read Command CSV"
            size_hint_y: None
            height: 30
            disabled: not root.cfg_loaded
            on_release: MirrorViewWidget.readCommandCsv()
        Button:
            size_hint_y: None
            height: 40
            text: 'Load Mirror Config'
            on_release: MirrorViewWidget.readMirrorConfigCsv()
        Button:
            size_hint_y: None
            height: 40
            text: 'Save Mirror Commands'
            disabled: not root.cfg_loaded

        BorderGridLayout:
            border_color: 1,1,1,1
            border_width: 1
            cols: 1
            Label: 
                id: active_tec_label
                text: mvw.mirror_name+':'+root.active_tec.tec_label_str if root.active_tec != None else '--'
                bold: True
                halign: 'center'
                size_hint_y: None
                height: 40
                disabled: root.opts_disabled
            GridLayout:
                cols: 1
                GridLayout:
                    cols: 2
                    # border_color: 1,1,1,1
                    # border_width: 1
                    Label:
                        text: 'Command [0:1]:'  
                        size_hint: None, None
                        size: 150, 40
                        halign: 'left'
                        disabled: root.opts_disabled
                    FloatInput:
                        id: cmd_input
                        size_hint: None, None
                        size: 130, 40
                        disabled: root.opts_disabled or not tec_enabled_cb.active
                        on_text: root.update_tec_color(self.value)
                        on_focus: print(args); print(self.value)
                    Label:
                        text: 'Temp [C]:' 
                        size_hint: None, None
                        size: 150, 40
                        disabled: root.opts_disabled
                    FloatInput:
                        size_hint: None, None
                        size: 130, 40
                        disabled: True #root.opts_disabled
                    Label:
                        size_hint_y: None
                        height: 40
                        text:'Enabled: '
                        disabled: root.opts_disabled
                    CheckBox:
                        id: tec_enabled_cb
                        size_hint_y: None
                        height: 40
                        disabled: root.opts_disabled
                        active: root.active_tec.enabled if root.active_tec != None else False
                        on_release : root.setTecEnabledState(self.active);
                BorderGridLayout:
                    border_color: 1,1,1,1
                    border_width: 1
                    size_hint_y: None
                    height: 40
                    cols: 2
                    Label:
                        text: "Cmd Gain: "
                        disabled: not root.cfg_loaded
                    FloatInput:
                        id: gain_input
                        # size_hint: None, None
                        # size: 140, 30
                        text: '1.0'
                        font_size: 15
                        disabled: not root.cfg_loaded
                BorderGridLayout:
                    border_color: 1,1,1,1
                    border_width: 1
                    cols: 2
                    Button:
                        id: enable_all_btn
                        size_hint_y: None
                        height: 40
                        text: 'Enable All'
                        disabled: not root.cfg_loaded
                        on_release: mvw.enableAll(True)
                    Button:
                        id: disable_all_btn
                        size_hint_y: None
                        height: 40
                        text: 'Disable All'
                        disabled: not root.cfg_loaded
                        on_release: mvw.enableAll(False)
                    Button:
                        size_hint_y: None
                        height: 40
                        text: 'All to Zero'
                        disabled: not root.cfg_loaded
                        on_release: mvw.all_to_zero(); cmd_input.setValue(0.0)

                    Button:
                        size_hint_y: None
                        height: 40
                        text: 'Send Commands'
                        disabled: not root.cfg_loaded
                        on_release: mvw.update_tec_map(); TECBoxController.startSendAll();
                    Button:
                        size_hint_y: None
                        height: 40
                        text: 'debug'
                        disabled: not root.cfg_loaded
                        on_release: print(root.active_tec.id + ":" + str(root.active_tec.mag_value)) if root.active_tec != None else print('No active TEC')
                        # on_release: print(root.active_tec.id + ":" ) if root.active_tec != None else print('No active TEC')
        BorderGridLayout:
            border_color: 1,1,1,1
            cols: 1
            Zernike_Widget:
                id: zernike_panel
                # on_release: 
            Button:
                size_hint: None, None
                size: 80, 40
                text: 'Map'
                on_release: root.map_zernike()
